<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme -->
    <ResourceDictionary x:Key="LightTheme">
        <Color x:Key="PrimaryColor">#3A86FF</Color>
        <Color x:Key="BackgroundColor">#FFFFFF</Color>
        <Color x:Key="TabBackgroundColor">#F2F2F2</Color>
        <Color x:Key="TabHoverColor">#E6E6E6</Color>
        <Color x:Key="TabSelectedColor">#FFFFFF</Color>
        <Color x:Key="TextColor">#222222</Color>
        <Color x:Key="DisabledTextColor">#999999</Color>
    </ResourceDictionary>

    <!-- Dark Theme -->
    <ResourceDictionary x:Key="DarkTheme">
        <Color x:Key="PrimaryColor">#3A86FF</Color>
        <Color x:Key="BackgroundColor">#1E1E1E</Color>
        <Color x:Key="TabBackgroundColor">#2C2C2C</Color>
        <Color x:Key="TabHoverColor">#333333</Color>
        <Color x:Key="TabSelectedColor">#2C2C2C</Color>
        <Color x:Key="TextColor">#FFFFFF</Color>
        <Color x:Key="DisabledTextColor">#777777</Color>
    </ResourceDictionary>

    <!-- Active theme holder (switch this to LightTheme or DarkTheme at runtime) -->
    <ResourceDictionary x:Key="ActiveTheme"
                        Source="pack://application:,,,/Themes.xaml"/>
</ResourceDictionary>
